import os ;

build-project src ;

project : default-build release ;
    
# edit following lines so they'll match the installation
# of libpng, libjpeg, libtiff and OpenEXR


if [ os.name ] = NT
{
    alias EXTRA_LIBS : jpeg png zlib tiff Half Imath Iex IlmThread IlmImf
        :
	:
        : <include>"D:/gil/include"
	  <include>"D:/gil/include/OpenEXR"
	  <variant>debug:<linkflags>"/libpath:D:\\gil\\bin\\debug"
	  <variant>release:<linkflags>"/libpath:D:\\gil\\bin\\release"
        ;

    lib jpeg png zlib tiff Half Imath Iex IlmThread IlmImf ;

} else {
    alias EXTRA_LIBS : : :
        : <cxxflags>"`pkg-config --cflags libpng OpenEXR`"
	  <linkflags>"`pkg-config --libs libpng OpenEXR` -ljpeg -ltiff"
	;
}

