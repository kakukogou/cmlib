build-project src ;

project : default-build release ;
    
# edit following lines so they'll match the installation
# of libpng, libjpeg, libtiff and OpenEXR

alias EXTRA_LIBS : :
	<toolset>gcc
	: :
	<cxxflags>"`pkg-config --cflags libpng OpenEXR`"
	<linkflags>"`pkg-config --libs libpng OpenEXR` -ljpeg -ltiff"
	;

alias EXTRA_LIBS : :
	<toolset>msvc
	: :
	<define>WIN32
	<cxxflags>"/ID:\\Projects\\include /ID:\\Projects\\include\\OpenEXR"
	<linkflags>"zlib.lib libpng.lib libjpeg.lib libtiff.lib IlmImf.lib"
	;

